/* =========================
   Galería en páginas de detalle
========================= */
function initGaleria() {
  const thumbs = document.querySelectorAll(".hd-detail__gallery-thumbs img");
  const main = $("#mainImage");
  if (!main || !thumbs.length) return;

  thumbs.forEach((thumb) => {
    thumb.addEventListener("click", () => {
      main.src = thumb.src;
    });
  });
}

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Detalle del producto</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="css/styles.css" />
</head>
<body>
  <!-- Header -->
  <header class="hd-header">
    <div class="hd-header__logo"><a href="index.html">Logo</a></div>
    <form class="hd-header__search" onsubmit="event.preventDefault(); buscarProductos();">
      <input id="searchInput" type="search" placeholder="Buscar productos..." aria-label="Buscar" />
      <button type="submit">Buscar</button>
    </form>
  </header>

  <!-- Contenido del producto -->
  <main class="producto-detalle">
    <div class="producto-info">
